<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jefflib</artifactId>
    <packaging>jar</packaging>
    <parent>
        <groupId>com.jeff-media.jefflib</groupId>
        <artifactId>jefflib-parent</artifactId>
        <version><!-- changeme -->13.0.1</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <properties>
        <maven.deploy.skip>false</maven.deploy.skip>
    </properties>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <directory>target</directory>
        <finalName>JeffLib</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <configuration>
                    <createDependencyReducedPom>true</createDependencyReducedPom>
                    <createSourcesJar>true</createSourcesJar>
                    <shadedArtifactAttached>false</shadedArtifactAttached>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>com.jeff-media:JeffLib-*</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>**/package-info.class</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/MANIFEST.MF</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>aggregate-jar</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.20.2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.20.1</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.20</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.19.4</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.19.3</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.19.2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.19.1</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1.19</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1_18_R2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1_18_R1</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.jeff-media.jefflib</groupId>
            <artifactId>jefflib-nms-1_17_R1</artifactId>
            <version>${project.version}</version>
